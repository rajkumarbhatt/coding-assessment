@{
    Layout = null;
}
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Login</title>
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>

@model DAL.ViewModels.LoginViewModel;

<div class="container-fluid row bg-white position-absolute h-100 gradient-background">

    <div class="animate-right-side h-100 col-sm-12 col-md-6 d-flex flex-column align-items-center justify-content-center">

        <div class="container-fluid d-flex gap-md-1 gap-lg-2 gap-xl-4 align-items-center justify-content-center">
            <img class="logo-img" src="~/images/pizzashop_logo.svg" alt="">
        </div>

        <div class="container-fluid d-flex flex-column align-items-center justify-content-center">

            <form action="" id="login-form"
                class=" form-container d-flex flex-column align-items-center justify-content-center gap-3">
                <div class="input-group d-flex flex-column">
                    <input type="email" id="email" name="Email" placeholder="Email*" class="form-control w-100 p-2 custom-input-border" asp-for="@Model.Email">
                    <img class="small-image image-in-input" src="~/images/person.svg" alt="">
                    <span asp-validation-for="@Model.Email" class="text-danger2"></span>
                </div>
                <div class="input-group d-flex flex-column">
                    <input type="password" id="password" name="Password" placeholder="Password*"
                        class="form-control p-2 w-100 custom-input-border" asp-for="@Model.Password">
                    <img id="show-password" class="small-image image-in-input" onclick="showAndHidePassword(true)"
                        src="~/images/show-password.svg" alt="">
                    <img id="hide-password" class="small-image image-in-input d-none"
                        onclick="showAndHidePassword(false)" src="~/images/hide-password.svg" alt="">
                    <span asp-validation-for="@Model.Password" class="text-danger2"></span>
                </div>
                <div class="d-flex justify-content-between w-100 small">
                    <div>
                        <input type="checkbox" class="cursor-pointer" name="remember-me" id="remember-me">
                        <label for="remember-me" class="cursor-pointer text-danger2">Remember me</label>
                    </div>
                </div>
                <button id="submit" class="mt-3 btn w-100 btn-primary login-btn">Login</button>
            </form>
        </div>
    </div>

    <div class="animate-left-side d-none d-md-block col-sm-12 col-md-6 img-container">
        <img class="img-fluid object-fit-cover h-100" src="~/images/dominos_background.svg" alt="">
    </div>

</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/login.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>